<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="true"
    xmlns:log4j='http://jakarta.apache.org/log4j/'>

    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
        <param name="ConversionPattern" 
          value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n" />
        </layout>
        <filter class="org.apache.log4j.varia.LevelMatchFilter">
        	<param name="LevelToMatch" value="info"></param>
        	<param name="AcceptOnMatch" value="true"></param>
        </filter>
        <filter class="org.apache.log4j.varia.LevelMatchFilter">
        	<param name="LevelToMatch" value="warn"></param>
        	<param name="AcceptOnMatch" value="true"></param>
        </filter>
        <filter class="org.apache.log4j.varia.LevelMatchFilter">
        	<param name="LevelToMatch" value="fatal"></param>
        	<param name="AcceptOnMatch" value="true"></param>
        </filter>
        <filter class="org.apache.log4j.varia.LevelMatchFilter">
        	<param name="LevelToMatch" value="debug"></param>
        	<param name="AcceptOnMatch" value="true"></param>
        </filter>
        <filter class="org.apache.log4j.varia.DenyAllFilter"></filter>
    </appender>
    
    <appender name="fileAppender" class="org.apache.log4j.FileAppender">
        <param name="file" value="server.error.log"></param>
        <param name="treeshold" value="info"></param>
        	<layout class="org.apache.log4j.PatternLayout">
        <param name="ConversionPattern" 
          value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n" />
        </layout>
        
        <filter class="org.apache.log4j.varia.LevelMatchFilter">
        	<param name="LevelToMatch" value="error"></param>
        	<param name="AcceptOnMatch" value="true"></param>
        </filter>
        <filter class="org.apache.log4j.varia.DenyAllFilter"></filter>
    </appender>

    <root>
        <level value="DEBUG" />
        <appender-ref ref="console" />
        <appender-ref ref="fileAppender" />
    </root>

</log4j:configuration>